name: CI Pipeline

on:
  push:
    branches: [ main ]
  pull_request:

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      {% if language == "python" %}
      - uses: actions/setup-python@v4
        with:
          python-version: '3.10'
      - run: pip install -r requirements.txt
      - run: pytest
      {% elif language == "node" %}
      - uses: actions/setup-node@v3
        with:
          node-version: '18'
      - run: npm install
      - run: npm test
      {% elif language == "go" %}
      - uses: actions/setup-go@v4
        with:
          go-version: '1.20'
      - run: go test ./...
      {% endif %}

{% if include_deploy %}
  deploy:
    runs-on: ubuntu-latest
    needs: build
    steps:
      - run: echo "Deploy step placeholder"
{% endif %}
