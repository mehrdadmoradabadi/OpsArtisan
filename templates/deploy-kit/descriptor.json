{
  "id": "deploy-kit",
  "title": "Deploy Kit (Docker + Compose + systemd)",
  "description": "Generate Dockerfile, docker-compose.yml, and a systemd unit for deployment.",
  "prompts": [
    {
      "id": "project_name",
      "type": "string",
      "label": "Project name",
      "default": "myapp"
    },
    {
      "id": "app_port",
      "type": "int",
      "label": "App port",
      "default": 8000
    },
    {
      "id": "db_type",
      "type": "choice",
      "label": "Database",
      "choices": ["postgres", "mysql", "none"],
      "default": "postgres"
    }
  ],
  "outputs": [
    {"path": "Dockerfile", "template": "Dockerfile.j2"},
    {"path": "docker-compose.yml", "template": "docker-compose.j2"},
    {"path": "{{ project_name }}.service", "template": "service.j2"}
  ],
  "next_steps": [
    "Build your app image with `docker compose build`.",
    "Deploy with `systemctl enable --now {{ project_name }}`."
  ]
}
