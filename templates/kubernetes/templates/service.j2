apiVersion: v1
kind: Service
metadata:
  name: {{ app_name }}
  namespace: {{ namespace }}
  labels:
    app: {{ app_name }}
    managed-by: opsartisan
  annotations:
    service.beta.kubernetes.io/aws-load-balancer-type: "nlb"
spec:
  selector:
    app: {{ app_name }}
  ports:
    - name: http
      port: {{ port }}
      targetPort: {{ port }}
      protocol: TCP
  type: ClusterIP
  sessionAffinity: None