apiVersion: v1
kind: ConfigMap
metadata:
  name: {{ app_name }}-config
  namespace: {{ namespace }}
  labels:
    app: {{ app_name }}
    managed-by: opsartisan
data:
  environment: "production"
  log_level: "info"
  app.properties: |
    # Application configuration
    app.name={{ app_name }}
    app.port={{ port }}
    app.version=1.0.0

  config.yaml: |
    server:
      port: {{ port }}
      host: 0.0.0.0
    logging:
      level: info
      format: json
