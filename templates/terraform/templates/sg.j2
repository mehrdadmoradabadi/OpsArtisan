provider "aws" {
  region = "{{ region }}"
}

resource "aws_security_group" "{{ resource_name }}" {
  name        = "{{ resource_name }}"
  description = "Security group for {{ resource_name }}"
  vpc_id      = "vpc-xxxxxx"

  ingress {
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
}
