#!/bin/bash
#
# Terraform plan script
# Generated by OpsArtisan
#

set -euo pipefail

# Colors
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

echo -e "${BLUE}==> Terraform Plan${NC}"
echo "Project: {{ project_name }}"
echo "Environment: {{ environment }}"
echo ""

# Validate first
echo -e "${BLUE}==> Validating configuration${NC}"
terraform validate

if [ $? -ne 0 ]; then
    echo -e "${YELLOW}Validation failed${NC}"
    exit 1
fi

echo -e "${GREEN}✓ Configuration valid${NC}"
echo ""

# Format check
echo -e "${BLUE}==> Checking format${NC}"
terraform fmt -check -recursive

# Run plan
echo ""
echo -e "${BLUE}==> Creating execution plan${NC}"
terraform plan -out=tfplan

if [ $? -eq 0 ]; then
    echo ""
    echo -e "${GREEN}✓ Plan created successfully${NC}"
    echo ""
    echo "Plan saved to: tfplan"
    echo ""
    echo "Review the plan above carefully."
    echo "To apply: bash scripts/apply.sh"
else
    echo -e "${YELLOW}Plan failed${NC}"
    exit 1
fi
