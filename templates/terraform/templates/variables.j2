# Variables for {{ project_name }}
# Generated by OpsArtisan

variable "project_name" {
  description = "Name of the project"
  type        = string
  default     = "{{ project_name }}"
}

variable "environment" {
  description = "Environment (dev, staging, prod)"
  type        = string
  default     = "{{ environment }}"
}

variable "region" {
  description = "AWS region"
  type        = string
  default     = "{{ region }}"
}

{% if enable_vpc %}
variable "vpc_cidr" {
  description = "CIDR block for VPC"
  type        = string
  default     = "{{ vpc_cidr }}"
}
{% endif %}

{% if infrastructure_type == 'application' %}
variable "instance_type" {
  description = "EC2 instance type"
  type        = string
  default     = "{{ instance_type }}"
}

{% if enable_autoscaling and configuration_mode == 'advanced' %}
variable "min_instances" {
  description = "Minimum number of instances"
  type        = number
  default     = {{ min_instances }}
}

variable "max_instances" {
  description = "Maximum number of instances"
  type        = number
  default     = {{ max_instances }}
}
{% endif %}
{% endif %}

{% if enable_rds %}
variable "rds_instance_class" {
  description = "RDS instance class"
  type        = string
  default     = "{{ rds_instance_class }}"
}
{% endif %}

{% if enable_backup and configuration_mode == 'advanced' %}
variable "backup_retention_days" {
  description = "Number of days to retain backups"
  type        = number
  default     = {{ backup_retention_days }}
}
{% endif %}

{% if enable_ssl and ssl_certificate_arn and configuration_mode == 'advanced' %}
variable "ssl_certificate_arn" {
  description = "ARN of SSL certificate"
  type        = string
  default     = "{{ ssl_certificate_arn }}"
}
{% endif %}

{% if enable_tags and configuration_mode == 'advanced' %}
variable "cost_center" {
  description = "Cost center for billing"
  type        = string
  default     = "{{ cost_center }}"
}

variable "owner_email" {
  description = "Owner email address"
  type        = string
  default     = "{{ owner_email }}"
}
{% endif %}