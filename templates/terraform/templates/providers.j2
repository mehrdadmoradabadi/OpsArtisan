# Provider configuration
# Generated by OpsArtisan

{% if cloud_provider == 'aws' %}
provider "aws" {
  region = var.region

  default_tags {
    tags = {
      Project     = var.project_name
      Environment = var.environment
      ManagedBy   = "Terraform"
    }
  }
}

{% if enable_multi_region and configuration_mode == 'advanced' %}
{% for region in secondary_regions.split(',') %}
provider "aws" {
  alias  = "{{ region.strip().replace('-', '_') }}"
  region = "{{ region.strip() }}"

  default_tags {
    tags = {
      Project     = var.project_name
      Environment = var.environment
      ManagedBy   = "Terraform"
    }
  }
}
{% endfor %}
{% endif %}

{% elif cloud_provider == 'azure' %}
provider "azurerm" {
  features {}
}

{% elif cloud_provider == 'gcp' %}
provider "google" {
  project = var.project_name
  region  = var.region
}
{% endif %}
